generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Perfil {
  SUPER_ADMIN
  CEO
  GERENTE
  COORDENADOR
  SUPERVISOR
  OPERACIONAL
  TECNICO
}

enum NivelCargo {
  JUNIOR
  PLENO
  SENIOR
  ESTAGIARIO
  APRENDIZ
}

model Departamento {
  id              Int           @id @default(autoincrement())
  nome            String
  cargos          Cargo[]
  empregados      Empregado[]   
  criadoEm        DateTime      @default(now())
  atualizadoEm    DateTime      @updatedAt
}

model Cargo {
  id              Int           @id @default(autoincrement())
  nome            String
  departamentoId  Int
  departamento    Departamento  @relation(fields: [departamentoId], references: [id])
  empregados      Empregado[]
  criadoEm        DateTime      @default(now())
  atualizadoEm    DateTime      @updatedAt
}

model Empregado {
  id              Int           @id @default(autoincrement())
  nome            String
  email           String        @unique
  cpf             String        @unique
  departamentoId  Int
  departamento    Departamento  @relation(fields: [departamentoId], references: [id])
  cargoId         Int
  cargo           Cargo         @relation(fields: [cargoId], references: [id])
  perfil          Perfil
  nivel           NivelCargo
  criadoEm        DateTime      @default(now())
  atualizadoEm    DateTime      @updatedAt
}

